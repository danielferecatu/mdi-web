block vars
  - var isHome = false

doctype html
html(lang="ro")

  head
    title= "mdi - (c)"
    meta(charset="utf-8")
    meta(name="author", content="Daniel Ferecatu")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    link(href="css/index.css", rel="stylesheet", type="text/css")
    link(rel="icon", type="image/png", href="img/favicon.png")
  
  
  body
    header#header
      
      block header
      
        if isHome
          .logo
            img(src="img/logo.png", width="96", height="96", alt="logo")
          h1 Standard Template Library
        else
          a(href="index.html").logo
            img(src="img/logo.png",width="48",height="48", alt="logo")
            span.prompt Read more posts


    main#main
      
      block content



    footer#footer
      hr
      .links
        a(href="about.html") About
        | &middot;
        a(href="https://github.com/danielFerecatu/mdi",target="_blank") GitHub
      p Copyright &copy; Daniel Ferecatu.
    
    #fab.up
    
    block scripts
      if isHome
        script(src="js/jquery-1.11.2.min.js")
        script(src="js/script.js")
      else
        script(src="js/jquery-1.11.2.min.js")
        script(src="js/script.js")
        script(src="js/highlight.cpp.js")
        script hljs.initHighlightingOnLoad();
        
